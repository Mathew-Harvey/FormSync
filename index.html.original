        // Real-time Sync Functions
        function startRealtimeSync() {
            // Register user
            appState.users[appState.currentUser.id] = appState.currentUser;
            updateUserPresence();

            // Start sync interval - faster for better responsiveness
            appState.syncInterval = setInterval(() => {
                syncData();
            }, 100); // 100ms for near real-time updates

            // Initial sync
            syncData();
        }

        function syncData() {
            const syncKey = `sync_${appState.formId}`;
            const now = Date.now();

            // Get current sync data
            let syncData = JSON.parse(localStorage.getItem(syncKey) || '{}');
            if (!syncData.users) syncData.users = {};
            if (!syncData.formData) syncData.formData = {};
            if (!syncData.fieldLocks) syncData.fieldLocks = {};
            if (!syncData.screenshots) syncData.screenshots = [];
            if (!syncData.webrtc) syncData.webrtc = {};

            // Update user presence
            syncData.users[appState.currentUser.id] = {
                ...appState.currentUser,
                lastSeen: now
            };

            // Clean up inactive users (not seen in 3 seconds)
            Object.keys(syncData.users).forEach(userId => {
                if (userId !== appState.currentUser.id && now - syncData.users[userId].lastSeen > 3000) {
                    delete syncData.users[userId];
                    // Clean up their locks
                    Object.keys(syncData.fieldLocks).forEach(fieldId => {
                        if (syncData.fieldLocks[fieldId] === userId) {
                            delete syncData.fieldLocks[fieldId];
                        }
                    });
                    handleUserDisconnected(userId);
                }
            });

            // Update field locks
            Object.keys(appState.fieldLocks).forEach(fieldId => {
                syncData.fieldLocks[fieldId] = appState.fieldLocks[fieldId];
            });

            // Update form data
            Object.keys(appState.formData).forEach(fieldId => {
                syncData.formData[fieldId] = appState.formData[fieldId];
            });

            // Save sync data
            try {
                localStorage.setItem(syncKey, JSON.stringify(syncData));
            } catch (e) {
                console.error('Failed to save sync data:', e);
            }

            // Process updates from other users
            processRemoteUpdates(syncData);

            // Update UI
            updateUsersList();
            updateFieldIndicators();
        }

        function processRemoteUpdates(syncData) {
            // Update users
            Object.keys(syncData.users).forEach(userId => {
                if (userId !== appState.currentUser.id && !appState.users[userId]) {
                    // New user joined
                    appState.users[userId] = syncData.users[userId];
                    createPeerConnection(userId);
                }
            });
            appState.users = syncData.users;

            // Update field locks
            Object.keys(syncData.fieldLocks).forEach(fieldId => {
                if (syncData.fieldLocks[fieldId] !== appState.currentUser.id) {
                    const field = document.querySelector(`[data-field-id="${fieldId}"]`);
                    if (field) {
                        const user = appState.users[syncData.fieldLocks[fieldId]];
                        if (user) {
                            field.classList.add('field-locked');
                            field.querySelector('.field-input').style.borderColor = user.color;
                        }
                    }
                }
            });

            // Unlock fields that are no longer locked
            document.querySelectorAll('.field-locked').forEach(field => {
                const fieldId = field.dataset.fieldId;
                if (!syncData.fieldLocks[fieldId] || syncData.fieldLocks[fieldId] === appState.currentUser.id) {
                    field.classList.remove('field-locked');
                    field.querySelector('.field-input').style.borderColor = '';
                }
            });

            // Update form data
            Object.keys(syncData.formData).forEach(fieldId => {
                if (!appState.fieldLocks[fieldId] || appState.fieldLocks[fieldId] !== appState.currentUser.id) {
                    const fieldElement = document.getElementById(`field_${fieldId}`);
                    if (fieldElement && syncData.formData[fieldId] !== appState.formData[fieldId]) {
                        if (fieldElement.type === 'checkbox') {
                            fieldElement.checked = syncData.formData[fieldId];
                        } else {
                            fieldElement.value = syncData.formData[fieldId] || '';
                        }
                        appState.formData[fieldId] = syncData.formData[fieldId];
                    }
                }
            });

            // Update screenshots
            if (syncData.screenshots.length !== appState.screenshots.length) {
                appState.screenshots = syncData.screenshots;
                updateScreenshots();
            }

            // Process WebRTC signaling
            processWebRTCSignaling(syncData.webrtc);
        }

        function updateUserPresence() {
            const userCount = Object.keys(appState.users).length;
            document.getElementById('userCount').textContent = userCount;
        }

        function updateUsersList() {
            const usersList = document.getElementById('usersList');
            const currentUsers = Object.values(appState.users).filter(u => u.id);
            
            usersList.innerHTML = currentUsers.map(user => {
                const isCurrentUser = user.id === appState.currentUser.id;
                const activity = getUse

rActivity(user.id);
                
                return `
                    <div class="user-item" data-user-id="${user.id}">
                        <div class="user-status" style="background-color: ${user.color}">
                            ${user.initials || getUserInitials(user.name)}
                        </div>
                        <div class="user-info">
                            <div class="user-name">${user.name}${isCurrentUser ? ' (You)' : ''}</div>
                            <div class="user-activity">${activity}</div>
                        </div>
                    </div>
                `;
            }).join('');

            updateUserPresence();
        }

        function getUserActivity(userId) {
            // Check if user is editing any field
            for (const [fieldId, lockUserId] of Object.entries(appState.fieldLocks)) {
                if (lockUserId === userId) {
                    const field = document.querySelector(`[data-field-id="${fieldId}"] .field-label`);
                    if (field) {
                        return `Editing ${field.textContent.replace(' *', '')}`;
                    }
                }
            }
            return 'Active';
        }

        // Form Field Functions
        function lockField(fieldId) {
            appState.fieldLocks[fieldId] = appState.currentUser.id;
            const indicator = document.getElementById(`indicator_${fieldId}`);
            if (indicator) {
                indicator.textContent = 'Editing...';
                indicator.classList.add('active');
            }
        }

        function unlockField(fieldId) {
            if (appState.fieldLocks[fieldId] === appState.currentUser.id) {
                delete appState.fieldLocks[fieldId];
                const indicator = document.getElementById(`indicator_${fieldId}`);
                if (indicator) {
                    indicator.classList.remove('active');
                }
            }
        }

        function updateFieldValue(fieldId) {
            const fieldElement = document.getElementById(`field_${fieldId}`);
            if (fieldElement) {
                if (fieldElement.type === 'checkbox') {
                    appState.formData[fieldId] = fieldElement.checked;
                } else {
                    appState.formData[fieldId] = fieldElement.value;
                }
            }
        }

        function handleFieldInput(fieldId) {
            // Debounced update for text fields
            clearTimeout(appState[`fieldTimer_${fieldId}`]);
            appState[`fieldTimer_${fieldId}`] = setTimeout(() => {
                updateFieldValue(fieldId);
            }, 300);
        }

        function updateFieldIndicators() {
            Object.entries(appState.fieldLocks).forEach(([fieldId, userId]) => {
                const indicator = document.getElementById(`indicator_${fieldId}`);
                if (indicator && userId !== appState.currentUser.id) {
                    const user = appState.users[userId];
                    if (user) {
                        indicator.textContent = `${user.name} is editing`;
                        indicator.style.backgroundColor = user.color;
                        indicator.classList.add('active');
                    }
                }
            });
        }

        // Video Chat Functions
        async function initializeVideoChat() {
            try {
                appState.localStream = await navigator.mediaDevices.getUserMedia({
                    video: true,
                    audio: true
                });

                addVideoStream(appState.currentUser.id, appState.localStream, true);

                // Connect to other users
                Object.keys(appState.users).forEach(userId => {
                    if (userId !== appState.currentUser.id) {
                        createPeerConnection(userId);
                    }
                });
            } catch (error) {
                console.error('Failed to initialize video:', error);
                // Continue without video
            }
        }

        function createPeerConnection(remoteUserId) {
            if (appState.peerConnections[remoteUserId]) return;

            const pc = new RTCPeerConnection({
                iceServers: [
                    { urls: 'stun:stun.l.google.com:19302' },
                    { urls: 'stun:stun1.l.google.com:19302' }
                ]
            });

            appState.peerConnections[remoteUserId] = pc;

            // Add local stream
            if (appState.localStream) {
                appState.localStream.getTracks().forEach(track => {
                    pc.addTrack(track, appState.localStream);
                });
            }

            // Handle remote stream
            pc.ontrack = (event) => {
                addVideoStream(remoteUserId, event.streams[0], false);
            };

            // Handle ICE candidates
            pc.onicecandidate = (event) => {
                if (event.candidate) {
                    sendWebRTCSignal(remoteUserId, {
                        type: 'ice-candidate',
                        candidate: event.candidate
                    });
                }
            };

            // Create offer if we should initiate
            if (appState.currentUser.id < remoteUserId) {
                createOffer(remoteUserId);
            }
        }

        async function createOffer(remoteUserId) {
            const pc = appState.peerConnections[remoteUserId];
            if (!pc) return;

            try {
                const offer = await pc.createOffer();
                await pc.setLocalDescription(offer);
                sendWebRTCSignal(remoteUserId, {
                    type: 'offer',
                    offer: offer
                });
            } catch (error) {
                console.error('Failed to create offer:', error);
            }
        }

        async function handleOffer(remoteUserId, offer) {
            if (!appState.peerConnections[remoteUserId]) {
                createPeerConnection(remoteUserId);
            }

            const pc = appState.peerConnections[remoteUserId];
            if (!pc) return;

            try {
                await pc.setRemoteDescription(new RTCSessionDescription(offer));
                const answer = await pc.createAnswer();
                await pc.setLocalDescription(answer);
                sendWebRTCSignal(remoteUserId, {
                    type: 'answer',
                    answer: answer
                });
            } catch (error) {
                console.error('Failed to handle offer:', error);
            }
        }

        async function handleAnswer(remoteUserId, answer) {
            const pc = appState.peerConnections[remoteUserId];
            if (!pc) return;

            try {
                await pc.setRemoteDescription(new RTCSessionDescription(answer));
            } catch (error) {
                console.error('Failed to handle answer:', error);
            }
        }

        async function handleIceCandidate(remoteUserId, candidate) {
            const pc = appState.peerConnections[remoteUserId];
            if (!pc) return;

            try {
                await pc.addIceCandidate(new RTCIceCandidate(candidate));
            } catch (error) {
                console.error('Failed to add ICE candidate:', error);
            }
        }

        function sendWebRTCSignal(targetUserId, signal) {
            const syncKey = `sync_${appState.formId}`;
            const syncData = JSON.parse(localStorage.getItem(syncKey) || '{}');
            
            if (!syncData.webrtc) syncData.webrtc = {};
            
            const signalKey = `${appState.currentUser.id}_${targetUserId}_${Date.now()}`;
            syncData.webrtc[signalKey] = {
                from: appState.currentUser.id,
                to: targetUserId,
                signal: signal,
                timestamp: Date.now()
            };
            
            // Clean old signals (older than 10 seconds)
            Object.keys(syncData.webrtc).forEach(key => {
                if (Date.now() - syncData.webrtc[key].timestamp > 10000) {
                    delete syncData.webrtc[key];
                }
            });
            
            localStorage.setItem(syncKey, JSON.stringify(syncData));
        }

        function processWebRTCSignaling(webrtcData) {
            if (!webrtcData) return;

            Object.entries(webrtcData).forEach(([key, data]) => {
                if (data.to === appState.currentUser.id && data.timestamp > appState.lastSync) {
                    const signal = data.signal;
                    switch (signal.type) {
                        case 'offer':
                            handleOffer(data.from, signal.offer);
                            break;
                        case 'answer':
                            handleAnswer(data.from, signal.answer);
                            break;
                        case 'ice-candidate':
                            handleIceCandidate(data.from, signal.candidate);
                            break;
                    }
                }
            });

            appState.lastSync = Date.now();
        }

        function addVideoStream(userId, stream, isLocal) {
            const videoGrid = document.getElementById('videoGrid');
            let videoTile = document.getElementById(`video_${userId}`);

            if (!videoTile) {
                const user = appState.users[userId];
                videoTile = document.createElement('div');
                videoTile.id = `video_${userId}`;
                videoTile.className = 'video-tile';
                videoTile.innerHTML = `
                    <video ${isLocal ? 'muted' : ''} autoplay playsinline></video>
                    <div class="video-overlay">
                        <span class="video-name">${user ? user.name : 'Unknown'}</span>
                        <div class="video-controls">
                            ${isLocal ? `
                                <button class="video-btn" onclick="toggleAudio('${userId}')" title="Toggle Audio">
                                    üé§
                                </button>
                                <button class="video-btn" onclick="toggleVideo('${userId}')" title="Toggle Video">
                                    üìπ
                                </button>
                            ` : ''}
                        </div>
                    </div>
                `;
                videoGrid.appendChild(videoTile);
            }

            const video = videoTile.querySelector('video');
            video.srcObject = stream;
        }

        function toggleAudio(userId) {
            if (userId === appState.currentUser.id && appState.localStream) {
                const audioTrack = appState.localStream.getAudioTracks()[0];
                if (audioTrack) {
                    audioTrack.enabled = !audioTrack.enabled;
                    const button = document.querySelector(`#video_${userId} .video-btn:first-child`);
                    if (button) {
                        button.classList.toggle('muted', !audioTrack.enabled);
                        button.textContent = audioTrack.enabled ? 'üé§' : 'üîá';
                    }
                }
            }
        }

        function toggleVideo(userId) {
            if (userId === appState.currentUser.id && appState.localStream) {
                const videoTrack = appState.localStream.getVideoTracks()[0];
                if (videoTrack) {
                    videoTrack.enabled = !videoTrack.enabled;
                    const button = document.querySelector(`#video_${userId} .video-btn:last-child`);
                    if (button) {
                        button.classList.toggle('muted', !videoTrack.enabled);
                        button.textContent = videoTrack.enabled ? 'üìπ' : 'üìµ';
                    }
                }
            }
        }

        function handleUserDisconnected(userId) {
            // Remove video
            const videoTile = document.getElementById(`video_${userId}`);
            if (videoTile) {
                videoTile.remove();
            }

            // Close peer connection
            if (appState.peerConnections[userId]) {
                appState.peerConnections[userId].close();
                delete appState.peerConnections[userId];
            }
        }

        // Screenshot Functions
        async function captureScreenshot() {
            const videoGrid = document.getElementById('videoGrid');
            const videos = videoGrid.querySelectorAll('video');

            if (videos.length === 0) {
                alert('No videos to capture');
                return;
            }

            // Create canvas
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            // Calculate grid dimensions
            const gridCols = Math.ceil(Math.sqrt(videos.length));
            const gridRows = Math.ceil(videos.length / gridCols);
            const cellWidth = 320;
            const cellHeight = 180;
            
            canvas.width = gridCols * cellWidth;
            canvas.height = gridRows * cellHeight;

            // Draw background
            ctx.fillStyle = '#1a1a1a';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Draw each video
            videos.forEach((video, index) => {
                if (video.readyState >= 2) {
                    const col = index % gridCols;
                    const row = Math.floor(index / gridCols);
                    const x = col * cellWidth;
                    const y = row * cellHeight;

                    // Draw video
                    ctx.drawImage(video, x + 5, y + 5, cellWidth - 10, cellHeight - 10);

                    // Draw name overlay
                    const videoTile = video.closest('.video-tile');
                    const nameElement = videoTile?.querySelector('.video-name');
                    if (nameElement) {
                        ctx.fillStyle = 'rgba(0,0,0,0.7)';
                        ctx.fillRect(x + 5, y + cellHeight - 35, cellWidth - 10, 30);
                        ctx.fillStyle = 'white';
                        ctx.font = '14px sans-serif';
                        ctx.fillText(nameElement.textContent, x + 15, y + cellHeight - 15);
                    }
                }
            });

            // Save screenshot
            const screenshot = {
                id: Date.now().toString(),
                data: canvas.toDataURL('image/jpeg', 0.8),
                timestamp: Date.now(),
                user: appState.currentUser.name
            };

            // Add to screenshots (keep last 10)
            appState.screenshots.push(screenshot);
            if (appState.screenshots.length > 10) {
                appState.screenshots.shift();
            }

            // Update sync data
            const syncKey = `sync_${appState.formId}`;
            const syncData = JSON.parse(localStorage.getItem(syncKey) || '{}');
            syncData.screenshots = appState.screenshots;
            localStorage.setItem(syncKey, JSON.stringify(syncData));

            updateScreenshots();

            // Visual feedback
            const btn = document.querySelector('.screenshot-btn');
            const originalText = btn.innerHTML;
            btn.innerHTML = '‚úÖ Captured!';
            setTimeout(() => {
                btn.innerHTML = originalText;
            }, 1500);
        }

        function updateScreenshots() {
            const grid = document.getElementById('screenshotsGrid');
            grid.innerHTML = appState.screenshots.map(screenshot => `
                <div class="screenshot-thumb" onclick="viewScreenshot('${screenshot.id}')">
                    <img src="${screenshot.data}" alt="Screenshot by ${screenshot.user}">
                </div>
            `).join('');
        }

        function viewScreenshot(screenshotId) {
            const screenshot = appState.screenshots.find(s => s.id === screenshotId);
            if (screenshot) {
                document.getElementById('modalImage').src = screenshot.data;
                document.getElementById('screenshotModal').classList.add('active');
            }
        }

        function closeModal() {
            document.getElementById('screenshotModal').classList.remove('active');
        }

        // Utility Functions
        function copyShareCode() {
            const shareCode = appState.formId;
            const shareUrl = `${window.location.origin}${window.location.pathname}?form=${shareCode}`;
            
            navigator.clipboard.writeText(shareUrl).then(() => {
                const btn = document.querySelector('.copy-btn');
                const originalText = btn.textContent;
                btn.textContent = 'Copied!';
                setTimeout(() => {
                    btn.textContent = originalText;
                }, 2000);
            }).catch(() => {
                // Fallback
                const textArea = document.createElement('textarea');
                textArea.value = shareUrl;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                const btn = document.querySelector('.copy-btn');
                btn.textContent = 'Copied!';
                setTimeout(() => {
                    btn.textContent = 'Copy';
                }, 2000);
            });
        }

        function cleanup() {
            // Stop sync
            if (appState.syncInterval) {
                clearInterval(appState.syncInterval);
            }

            // Remove user from sync data
            const syncKey = `sync_${appState.formId}`;
            const syncData = JSON.parse(localStorage.getItem(syncKey) || '{}');
            if (syncData.users) {
                delete syncData.users[appState.currentUser.id];
            }
            
            // Clear user's locks
            if (syncData.fieldLocks) {
                Object.keys(syncData.fieldLocks).forEach(fieldId => {
                    if (syncData.fieldLocks[fieldId] === appState.currentUser.id) {
                        delete syncData.fieldLocks[fieldId];
                    }
                });
            }
            
            localStorage.setItem(syncKey, JSON.stringify(syncData));

            // Stop local stream
            if (appState.localStream) {
                appState.localStream.getTracks().forEach(track => track.stop());
            }

            // Close peer connections
            Object.values(appState.peerConnections).forEach(pc => pc.close());
        }
    </script>
