            document.getElementById('templateSection').style.display = 'grid';
            document.querySelector('.btn-group').style.display = 'none';
            document.getElementById('joinSection').classList.add('hidden');
        }

        function showJoinForm() {
            document.getElementById('joinSection').classList.remove('hidden');
            document.getElementById('templateSection').style.display = 'none';
        }

        function selectTemplate(templateId) {
            document.querySelectorAll('.template-card').forEach(card => {
                card.classList.remove('selected');
            });
            document.querySelector(`[data-template="${templateId}"]`).classList.add('selected');
            appState.formTemplate = templateId;
        }

        function createFormWithTemplate() {
            if (!appState.formTemplate) {
                alert('Please select a form template');
                return;
            }

            const userName = document.getElementById('userName').value.trim();
            if (!userName) {
                alert('Please enter your name');
                return;
            }

            // Create user and form
            appState.currentUser = {
                id: generateUserId(),
                name: userName,
                color: getRandomColor(),
                initials: getUserInitials(userName)
            };
            appState.formId = generateFormId();

            // Save form template
            const template = formTemplates[appState.formTemplate];
            localStorage.setItem(`form_${appState.formId}`, JSON.stringify({
                template: appState.formTemplate,
                title: template.title,
                description: template.description,
                fields: template.fields,
                created: Date.now(),
                createdBy: appState.currentUser.id
            }));

            // Initialize app
            initializeApp();
        }

        function joinForm() {
            const userName = document.getElementById('userName').value.trim();
            const joinCode = document.getElementById('joinCode').value.trim().toUpperCase();

            if (!userName || !joinCode) {
                alert('Please enter your name and form code');
                return;
            }

            // Check if form exists
            const formData = localStorage.getItem(`form_${joinCode}`);
            if (!formData) {
                alert('Form not found. Please check the code and try again.');
                return;
            }

            // Create user and join form
            appState.currentUser = {
                id: generateUserId(),
                name: userName,
                color: getRandomColor(),
                initials: getUserInitials(userName)
            };
            appState.formId = joinCode;

