        // Main App Initialization
        function initializeApp() {
            // Hide landing page
            document.getElementById('landingPage').classList.add('hidden');
            document.getElementById('mainApp').classList.remove('hidden');

            // Set user info
            const userAvatar = document.getElementById('userAvatar');
            userAvatar.textContent = appState.currentUser.initials;
            userAvatar.style.backgroundColor = appState.currentUser.color;

            // Set share code
            document.getElementById('shareCode').textContent = appState.formId;

            // Update URL
            const newUrl = `${window.location.origin}${window.location.pathname}?form=${appState.formId}`;
            window.history.replaceState({}, '', newUrl);

            // Load form
            loadForm();

            // Start real-time sync
            startRealtimeSync();

            // Initialize video chat
            initializeVideoChat();

            // Set up cleanup
            window.addEventListener('beforeunload', cleanup);
