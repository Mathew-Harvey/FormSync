        function loadForm() {
            const formData = JSON.parse(localStorage.getItem(`form_${appState.formId}`));
            if (!formData) {
                console.error('Form data not found');
                return;
            }

            // Set form info
            document.getElementById('formTitle').textContent = formData.title;
            document.getElementById('formDescription').textContent = formData.description;

            // Render form fields
            const formFieldsContainer = document.getElementById('formFields');
            formFieldsContainer.innerHTML = formData.fields.map(field => {
                const fieldId = `field_${field.id}`;
                let fieldHTML = '';

                switch (field.type) {
                    case 'text':
                    case 'email':
                    case 'tel':
                    case 'number':
                    case 'date':
                        fieldHTML = `
                            <div class="form-field" data-field-id="${field.id}">
                                <label class="field-label" for="${fieldId}">
                                    ${field.label}${field.required ? ' *' : ''}
                                </label>
                                <input 
                                    type="${field.type}" 
                                    id="${fieldId}" 
                                    class="field-input"
                                    ${field.required ? 'required' : ''}
                                    onchange="updateFieldValue('${field.id}')"
                                    onfocus="lockField('${field.id}')"
                                    onblur="unlockField('${field.id}')"
                                    oninput="handleFieldInput('${field.id}')"
                                >
                                <div class="field-indicator" id="indicator_${field.id}"></div>
                            </div>
                        `;
                        break;

                    case 'textarea':
                        fieldHTML = `
                            <div class="form-field" data-field-id="${field.id}">
                                <label class="field-label" for="${fieldId}">
                                    ${field.label}${field.required ? ' *' : ''}
                                </label>
                                <textarea 
                                    id="${fieldId}" 
                                    class="field-input field-textarea"
                                    ${field.required ? 'required' : ''}
                                    onchange="updateFieldValue('${field.id}')"
                                    onfocus="lockField('${field.id}')"
                                    onblur="unlockField('${field.id}')"
                                    oninput="handleFieldInput('${field.id}')"
                                ></textarea>
                                <div class="field-indicator" id="indicator_${field.id}"></div>
                            </div>
                        `;
                        break;

                    case 'select':
                        fieldHTML = `
                            <div class="form-field" data-field-id="${field.id}">
                                <label class="field-label" for="${fieldId}">
                                    ${field.label}${field.required ? ' *' : ''}
                                </label>
                                <select 
                                    id="${fieldId}" 
                                    class="field-input field-select"
                                    ${field.required ? 'required' : ''}
                                    onchange="updateFieldValue('${field.id}')"
                                    onfocus="lockField('${field.id}')"
                                    onblur="unlockField('${field.id}')"
                                >
                                    <option value="">Select an option</option>
                                    ${field.options.map(opt => `<option value="${opt}">${opt}</option>`).join('')}
                                </select>
                                <div class="field-indicator" id="indicator_${field.id}"></div>
                            </div>
